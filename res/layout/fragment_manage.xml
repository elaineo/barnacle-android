<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_manage"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
    android:padding="10dip"
    tools:context=".ManageActivity" >	
  		<!--  Header  Starts-->

	<LinearLayout android:id="@+id/tbl_head" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp" >
   	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:text="@string/label_status"
	        android:textSize="20sp" >
	    </TextView>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"
	        android:text="@string/label_start"
	        android:textSize="20sp" >
	    </TextView>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"
	        android:text="@string/label_dest"
	        android:textSize="18sp" >
	    </TextView>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="2"
  	        android:text="@string/label_date"
	        android:textSize="18sp" >
	    </TextView>
   	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:text="@string/label_delete"
	        android:textSize="20sp" >
	    </TextView>	    
    </LinearLayout>
    
     	<!--  List of routes -->	    
	    
 	<ListView
	  android:id="@+id/listrview"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  android:layout_below="@id/tbl_head"/>

 	 <!-- List of completed routes -->
 	
	<LinearLayout android:id="@+id/tbl_completed"
	    android:layout_below="@id/listrview" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp" >
   	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:text="@string/label_status"
	        android:textSize="20sp" >
	    </TextView>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"
	        android:text="@string/label_start"
	        android:textSize="20sp" >
	    </TextView>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"
	        android:text="@string/label_dest"
	        android:textSize="18sp" >
	    </TextView>
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="2"
  	        android:text="@string/label_date"
	        android:textSize="18sp" >
	    </TextView>
   	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:text="@string/label_delete"
	        android:textSize="20sp" >
	    </TextView>	    
    </LinearLayout> 	
	<ListView
	  android:id="@+id/listcompleted"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  android:layout_below="@id/listrview"/> 	
  </RelativeLayout> 