<?xml version="1.0" encoding="utf-8"?>
<resources>

   <style name="Theme.Barnacle" parent="android:style/Theme.Holo.Light">
		<item name="android:buttonStyle">@style/BarnacleButton</item>
		<item name="android:actionBarStyle">@style/BarnacleActionBar</item>
		<item name="android:editTextStyle">@style/BarnacleEditText</item>
		<item name="android:windowContentOverlay">@null</item>
   </style> 
        
    <style name="BarnacleActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ffffff</item>
        <item name="android:height">60dp</item>
        <item name="android:gravity">bottom|right</item>
    </style>
	
	<style name="BarnacleEditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/a9p_09_11_00067</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">15sp</item>
    </style>    
	<style name="BarnacleEditTextSmall" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/a9p_09_11_00067</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
    </style>
	
    <style name="textViewLarge">
        <item name="android:textColor">#372c24</item>
        <item name="android:textSize">15sp</item>
    </style>
	
    <style name="textTitle">
        <item name="android:textColor">#372c24</item>
        <item name="android:textSize">20sp</item>
    </style>		
    <style name="textTitleLarge">
        <item name="android:textColor">#372c24</item>
        <item name="android:textSize">24sp</item>
    </style>		
    <style name="textHeader">
        <item name="android:textColor">#372c24</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="textHeaderLarge">
        <item name="android:textColor">#372c24</item>
        <item name="android:textSize">18sp</item>
    </style>                
	<style name="BarnacleButton" parent="android:style/Widget.Button">
	  <item name="android:textSize">19sp</item>
	  <item name="android:textColor">@drawable/button_text_color</item>
	  <item name="android:padding">10dp</item>
	  <item name="android:background">@drawable/button_default</item>
	 </style>
	<style name="BarnacleButtonSmall" parent="@style/BarnacleButton">
	  <item name="android:textSize">15sp</item>
	  <item name="android:padding">8dp</item>
	 </style>	 
	<style name="PrimaryButton" parent="android:style/Widget.Button">
	  <item name="android:textSize">19sp</item>
	  <item name="android:textColor">@drawable/button_text_color</item>
	  <item name="android:padding">10dp</item>
	  <item name="android:background">@drawable/button_primary</item>
	 </style>
	<style name="PrimaryButtonSmall" parent="@style/PrimaryButton">
	  <item name="android:textSize">15sp</item>
	  <item name="android:padding">6dp</item>
	 </style>	 
	<style name="PrimaryButtonXSmall" parent="@style/PrimaryButton">
	  <item name="android:textSize">12sp</item>
	  <item name="android:padding">6dp</item>
	 </style>	 	 
	<style name="WarningButton" parent="android:style/Widget.Button">
	  <item name="android:textSize">19sp</item>
	  <item name="android:textColor">@drawable/button_text_color</item>
	  <item name="android:padding">10dp</item>
	  <item name="android:background">@drawable/button_warning</item>
	 </style>	
	<style name="LeftArrowButton" parent="android:style/Widget.Button">
	  <item name="android:background">@drawable/button_arrowleft</item>
	 </style>	
	<style name="RightArrowButton" parent="android:style/Widget.Button">
	  <item name="android:background">@drawable/button_arrowright</item>
	 </style>		 	 
	<style name="ActiveRouteButton" parent="android:style/Widget.Button">
	  <item name="android:background">@drawable/button_active</item>
	  <item name="android:focusable">false</item>
	  <item name="android:focusableInTouchMode">false</item>
	 </style>		 	 
	<style name="WaitRouteButton" parent="android:style/Widget.Button">
	  <item name="android:background">@drawable/button_wait</item>
	  <item name="android:focusable">false</item>
	  <item name="android:focusableInTouchMode">false</item>
	 </style>		 	 		 
	<style name="InactiveRouteButton" parent="android:style/Widget.Button">
	  <item name="android:background">@drawable/button_inactive</item>
	  <item name="android:focusable">false</item>
	  <item name="android:focusableInTouchMode">false</item>
	 </style>		 	 		 	
	
	<style name="BarnacleCheckBox" parent="android:style/Widget.CompoundButton.CheckBox">
	    <item name="android:button">@drawable/checkbox_default</item>
	</style>
	<style name="RadioSmall" parent="android:style/Widget.CompoundButton.RadioButton">
	    <item name="android:textSize">13sp</item>
	</style>		 
	
	<style name="BarnacleMenuButton" parent="android:style/Widget.Button">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
	  <item name="android:background">@drawable/bt_blue_bmp</item>
	 </style>   
	<style name="BarnacleMenuButtonLarge" parent="style/BarnacleMenuButton">
	    <item name="android:padding">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">50sp</item>
	 </style>   	 
	<style name="BarnacleMenuButtonSmall" parent="style/BarnacleMenuButton">
	    <item name="android:padding">6dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">25sp</item>
	 </style>   	 	 
	
	
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>

</resources>